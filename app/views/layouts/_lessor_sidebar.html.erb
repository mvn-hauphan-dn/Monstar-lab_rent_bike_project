<div class="row w-100"> 
  <div class="col-2 bg-light h-100" style="min-height: 930px">
    <div class="row justify-content-center items-align-center text-center" style="min-height: 200px">
      <%= current_user.avatar.present? ? image_tag(current_user.avatar, class:"h-100 w-100 rounded-circle mt-3", style:"max-height: 200px; max-width: 200px") : image_tag("avatar_default.jpg", class:"h-100 w-100 rounded-circle mt-3", style:"max-height: 200px; max-width: 200px") %>
      <%= link_to current_user.name, current_user, class: "nav-link link-dark px-2 bi bi-person" %>
    </div>
    <hr>
    <ul class="nav flex-column">
      <li class="nav-item ms-5">
        <%= link_to ' Home', root_path, class: "nav-link link-dark px-2 active bi bi-house-door" %>
        <%= link_to ' Add New Bike', new_bike_path, class: "nav-link link-dark px-2 active bi bi bi-plus" %>
        <%= link_to ' Bikes', bikes_path, class: "nav-link link-dark px-2 active bi bi-bicycle" %>
        <%= link_to ' Orders', '#', class: "nav-link link-dark px-2 active bi bi-pencil-square" %>
      </li>
    </ul>
  </div>
  <div class="col-10">
    <header class="py-1 border-bottom bg-light">
      <div class="container d-flex justify-content-center align-items-center">
        <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
          <%= image_tag "logo.png", class: "w-50" %>
        </a>
        <ul class="nav">
          <li><%= link_to " Log out", logout_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "nav-link link-dark bi bi-box-arrow-right" %></li>
        </ul>
      </div>
    </header>
    <%= yield %> 
    <%= render 'layouts/footer' %>
  </div>
</div>