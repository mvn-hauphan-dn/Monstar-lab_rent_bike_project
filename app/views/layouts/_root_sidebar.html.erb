<div class="row w-100"> 
  <div class="col-2 bg-light h-100" style="min-height: 930px">
    <div class="row justify-content-center items-align-center text-center" style="min-height: 200px">
      <%= link_to current_admin.name, '#', class: "nav-link link-dark px-2 bi bi-person" %>
    </div>
    <hr>
    <ul class="nav flex-column">
      <li class="nav-item ms-5">
        <%= link_to ' Home', '#', class: "nav-link link-dark px-2 active bi bi-house-door" %>
        <%= link_to ' Add New Bike', '#', class: "nav-link link-dark px-2 active bi bi bi-plus" %>
        <%= link_to ' Bikes', '#', class: "nav-link link-dark px-2 active bi bi-bicycle" %>
        <%= link_to ' Orders', '#', class: "nav-link link-dark px-2 active bi bi-pencil-square" %>
      </li>
    </ul>
  </div>
  <div class="col-10">
    <header class="py-1 border-bottom bg-light">
      <div class="container d-flex justify-content-end">
        <ul class="nav">
          <li><%= link_to " Log out", admin_logout_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "nav-link link-dark bi bi-box-arrow-right" %></li>
        </ul>
      </div>
    </header>
    <%= yield %> 
    <%= render 'layouts/footer' %>
  </div>
</div>