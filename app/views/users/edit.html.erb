<nav class="border-bottom m-0" aria-label="breadcrumb">
  <h1 class="display-5">Edit Bike</h5>
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item"><a href="#">Library</a></li>
    <li class="breadcrumb-item active" aria-current="page">Data</li>
  </ol>
</nav>
<%= render 'layouts/message' %>

<div class="row d-flex align-items-center justify-content-center">
  <div class="col-6">
    <%= form_with model: @user, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :avatar, class: "form-label" %>
        <%= f.file_field :avatar %>
      </div>

      <div class="mb-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:name).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:email).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:address).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:phone_number).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:password).first %></div>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <div class="form-text text-danger"><%= @user.errors.full_messages_for(:password_confirmation).first %></div>
      </div>

      <div class="d-flex justify-content-around align-items-center">
        <%= f.submit "Update", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>
