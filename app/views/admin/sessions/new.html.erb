<div class="form-signin d-flex justify-content-center text-center align-items-center bg-light" style="min-height:900px">
  <%= form_with url: admin_login_path do |f| %>
    <%= image_tag "logo.png", class: "img-fluid", style:"width:100px; height:100px" %>
    <h1 class="display-5 mb-3 fw-normal">Log in</h1>

    <div class="form-floating">
      <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <%= f.label :email, for: "floatingInput" %>
    </div>

    <div class="form-floating mb-4">
      <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <%= f.label :password, for: "floatingPassword" %>
    </div>

    <div class="d-flex justify-content-around align-items-center mb-4">
      <%= f.label :remember_me, class: "form-check" do %>
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <span>Remember me</span>
      <% end %>
    </div>

    <div class="d-flex justify-content-around align-items-center mb-4">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block w-100 " %>
    </div>

    <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
  <% end %>
</div>
