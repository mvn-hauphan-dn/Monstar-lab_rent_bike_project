<%= form_with model: @bike do |f| %>
  <% if params[:id].present? %>
    <div class="mb-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", readonly: true %>
    </div>

    <div class="mb-4">
      <%= f.label :price, class: "form-label" %>
      <%= f.number_field :price, class: "form-control", readonly: true %>
    </div>

    
    <div class="mb-4">
      <%= f.label :category_id, class: "form-label" %>
      <%= f.collection_select :category_id, @categories, :id, :name, {}, { class: 'form-select', disabled: true } %>
    </div>
  <% else %>
    <div class="mb-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      <div class="form-text text-danger"><%= @bike.errors.full_messages_for(:name).first %></div>
    </div>

    <div class="mb-4">
      <%= f.label :price, class: "form-label" %>
      <%= f.number_field :price, class: "form-control" %>
      <div class="form-text text-danger"><%= @bike.errors.full_messages_for(:price).first %></div>
    </div>

    <div class="mb-4">
      <%= f.label :category_id, class: "form-label" %>
      <%= f.collection_select :category_id, @categories, :id, :name, {}, { class: 'form-select' } %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-4">
    <%= f.label :images, class: "form-label" %>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="d-flex justify-content-around align-items-center">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>